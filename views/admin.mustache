<html>
<head>
    {{>header}}
    <link rel="stylesheet" href="css/styles.css" />
</head>
<body class="container">
<header id="main-header" data-height-onload="66">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand" href="#">
            <img
              src="img/logo.png"
              alt="The Scottish Pantry Network"
              id="logo"
              data-height-percentage="54"
              data-actual-width="500"
              data-actual-height="500"
            />
          </a>
          <button
            class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
              {{#user}}
               <li class="nav-item">
                <a id="View posts" href="/loggedIn" class="nav-link">
                  View Foods
                </a>
              </li>
              <li class="nav-item">
                 <a id="addUser" href="/adminPostNewUser" class="nav-link">Add user</a>
              </li>
              <li class="nav-item">
                <a href="/new" class="nav-link">New Item</a>
              </li>
                <li class="nav-item">
                  <a class="nav-link" href="/admin">Admin</a>
                </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Sign out</a>
              </li>
              {{/user}}
            </ul>
          </div>
        </div>
      </nav>
    </header>
<h1>{{title}}</h1>
<div class="row">
  <div class="col-md-6">
    {{#users}}
    <div class="card mb-3">
      <div class="card-body">
            <h4 class="card-title">User name : {{user}}</h4>
            <p class="card-text text-dark">
                Role : {{role}}
                <br>
                ID : {{_id}}
            </p>
            <form action="/users/{{_id}}/delete" method="POST">
                <input type="hidden" name="_method" value="DELETE"> <!-- For overriding the POST method -->
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
      </div>
    </div>
   {{/users}}
  </div>
  <div class="col-md-6">
    {{#items}}
    <div class="card mb-3">
     <img src="{{imageUrl}}" class="card-img-top item-img mx-auto d-block" alt="item image">
      <div class="card-body">
          <h5 class="card-title">{{productName}}</h5>
          <p class="card-text text-dark">
              <strong>Price:</strong> ${{price}}<br>
              <strong>Location:</strong> {{pantry}}<br>
              <strong>Expiration Date:</strong> {{expirationDate}}<br>
              <strong>Author:</strong> {{author}}<br>
              <strong>ID:</strong> {{_id}}
          </p>
          {{#user}}
          {{#usable}}
          <form action="/posts/{{_id}}/delete" method="POST">
                  <input type="hidden" name="_method" value="DELETE"> <!-- For overriding the POST method -->
                   <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
          {{/usable}}
          {{/user}}
      </div>
  </div>
 {{/items}}
</div>
</div>
</div>
</body>
</html>
